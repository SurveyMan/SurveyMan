<build>

    <plugins>

     <!-- JAVA COMPILER -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
	<version>2.3.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
	  <!--skipTests>true</skipTests-->
        </configuration>
        <executions>
          <execution>
            <phase>compile</phase>
            <goals>
              <goal>compile</goal>
            </goals>
          </execution>
        </executions>
      </plugin>


      <!-- COPIES INTO JAR AND STUFF -->
      <!--<plugin>
        <groupId>org.apache.maven.plugins</groupId>

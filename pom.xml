    </dependency>

    <dependency>
      <groupId>jaxme</groupId>
      <artifactId>jaxme-api</artifactId>
      <version>0.3.1</version>
    </dependency>

    <dependency>
      <groupId>org.apache.ws.jaxme</groupId>
      <artifactId>jaxmexs</artifactId>
      <version>0.5.2</version>
    </dependency>
    
    <dependency>
      <groupId>com.amazonaws</groupId>
      <artifactId>java-aws-mturk</artifactId>
      <version>1.6.2</version>
      <scope>system</scope>
      <systemPath>${project.home}/lib/java-aws-mturk.jar</systemPath> 
      <type>jar</type>
    </dependency>

    <dependency>
      <groupId>com.amazonaws</groupId>
      <artifactId>aws-mturk-dataschema</artifactId>
      <version>1.6.2</version>
      <scope>system</scope>
      <systemPath>${project.home}/lib/aws-mturk-dataschema.jar</systemPath> 
      <type>jar</type>
    </dependency>

    
    <dependency>
      <groupId>com.amazonaws</groupId>
      <artifactId>aws-mturk-wsdl</artifactId>
      <version>1.6.2</version>
      <scope>system</scope>
      <systemPath>${project.home}/lib/aws-mturk-wsdl.jar</systemPath> 
      <type>jar</type>
    </dependency>

  </dependencies>
<build>

    <plugins>

     <!-- JAVA COMPILER -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
	<version>2.3.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
        <executions>
          <execution>
            <phase>compile</phase>
            <goals>
              <goal>compile</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <!-- SCALA COMPILER -->
      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>scala-maven-plugin</artifactId>
        <version>3.1.3</version>
        <configuration>
          <addScalacArgs>-deprecation|-unchecked</addScalacArgs>
          <jvmArgs>
            <jvmArg>-Xms1G</jvmArg>
            <jvmArg>-Xmx3G</jvmArg>
          </jvmArgs>
        </configuration>
        <executions>
          <execution>
            <id>scala-compile-first</id>
	    <phase>process-resources</phase>
            <goals>
              <goal>add-source</goal>
              <goal>compile</goal>
            </goals>
          </execution>
          <execution>
            <id>scala-test-compile</id>
            <phase>process-test-resources</phase>
            <goals>
              <goal>testCompile</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <!-- COPIES INTO JAR AND STUFF -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-source-plugin</artifactId>
          <version>2.1.2</version>
          <executions>
            <execution>
              <id>attach-sources</id>
              <goals>
		<goal>jar</goal>
              </goals>
            </execution>
          </executions>
      </plugin>

      <!-- JAR DEPENDENCY FLATTENING -->
      <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-shade-plugin</artifactId>
          <version>2.1</version>
          <executions>
            <execution>
              <phase>package</phase>
              <goals>
		        <goal>shade</goal>
              </goals>
              <configuration>
		        <outputDirectory>${basedir}</outputDirectory>
		        <outputFile>surveyman.jar</outputFile>
		        <createSourcesJar>true</createSourcesJar>
		        <transformers>
                  <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                    <mainClass>gui.SurveyMan</mainClass>
		          </transformer>
		        </transformers>
              </configuration>
            </execution>
          </executions>
      </plugin>

        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <version>2.9</version>
            <configuration>
                <useFile>false</useFile>
            </configuration>
        </plugin>

    </plugins>

    <outputDirectory>target</outputDirectory>
    
</build>

</project>
